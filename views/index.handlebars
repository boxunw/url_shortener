<form action="/urls" method="POST">
  <div class="container d-flex align-items-center justify-content-center mb-3">
    <input type="text" class="form-control border-0 bg-light fs-4" placeholder="Input URL here" name="originalURL"
      style="width:50%;">
  </div>
  <div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-outline-primary px-5">Shorten</button>
  </div>
</form>
{{#if error}}
<div class="container d-flex align-items-center justify-content-center mt-3">
  <span class="alert alert-danger px-5" role="alert">
    {{error}}
  </span>
</div>
{{/if}}