<form action="/urls" method="POST" style="display: block;">
  <div class="input-group">
    <input class="form-control" type="text" placeholder="Input URL here" name="originalURL">
    <button class="btn btn-success" type="submit">Shorten</button>
    {{#if error}}
    <div class="alert alert-info" role="alert">
      <span class="mr-2">{{error}}</span>
    </div>
    {{/if}}
  </div>
</form>